generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
  url      = "postgresql://postgres:admin12@localhost:5432/mydb?schema=public"
}

enum gameResult {
  draw
}

model user {
  id             Int     @id @default(autoincrement())
  email          String? @unique
  profilePicture String?
  googleId       String? @unique
  name           String?
  socketId       String?

  createdAt      DateTime?     @default(now())
  updatedAt      DateTime?     @updatedAt
  auth           auth?
  playerA        gamePlayer[]  @relation("playerA")
  playerB        gamePlayer[]  @relation("playerB")
}

model auth {
  id                          Int       @id @default(autoincrement())
  user                        user      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId                      Int       @unique
  email                       String?
  verificationToken           String?   @unique
  verificationTokenExpiration BigInt?
  createdAt                   DateTime? @default(now())
  updatedAt                   DateTime? @updatedAt
}

// make game
model gamePlayer {
  id        Int       @id @default(autoincrement())
  playerA   user?     @relation("playerA", fields: [playerAId], references: [id])
  playerB   user?     @relation("playerB", fields: [playerBId], references: [id])
  playerAId Int?
  playerBId Int?
  roomId    String?   @unique
  result    String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}


